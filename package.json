{
  "name": "ravi.bot",
  "version": "0.1.0",
  "description": "Claude-powered bot integrated with notif.sh",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ravi": "./bin/ravi"
  },
  "scripts": {
    "build": "bun tsc",
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "tui": "bun src/tui.tsx",
    "wa": "bun src/wa.ts",
    "wa:dev": "bun --watch src/wa.ts",
    "cli": "bun src/cli/index.ts",
    "typecheck": "bun tsc --noEmit",
    "lint": "bun eslint src/"
  },
  "keywords": [
    "claude",
    "bot",
    "notif",
    "whatsapp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@hapi/boom": "^10.0.1",
    "@vector-im/matrix-bot-sdk": "^0.8.0-element.3",
    "@whiskeysockets/baileys": "^6.7.16",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "notif.sh": "^0.2.1",
    "openai": "^6.17.0",
    "pino": "^9.6.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.2.4",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^19.2.10",
    "bun-types": "^1.3.8",
    "globals": "^17.2.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.54.0"
  }
